                        </div>
                        <div class="card__content">
                            <h4 class="title">@product.ModelName</h4>
                            <p>@product.Description</p>
                            <p class="price">@product.UnitCost.ToString("C")</p>
                            <button class="btn">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Product Modal -->
                <div class="modal fade" id="productModal@product.Id" tabindex="-1" role="dialog" aria-labelledby="productModalLabel@product.Id" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="productModalLabel@product.Id">@product.ModelName</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <img src="@product.img_url" alt="@product.ModelName" />
                                <p>@product.Description</p>
                                <p class="price">@product.UnitCost.ToString("C")</p>
                                <button class="btn btn-primary">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- All Products Section -->
        <h2>All Products</h2>
        <div class="row">
            @foreach (var product in Model.AllProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                    <div class="card">
                        <div class="card__image">
                            <img src="@product.img_url" alt="@product.ModelName" data-toggle="modal" data-target="#productModal@product.Id" />
                        </div>
                        <div class="card__content">
                            <h4 class="title">@product.ModelName</h4>
                            <p>@product.Description</p>
                            <p class="price">@product.UnitCost.ToString("C")</p>
                            <button class="btn">Add to Cart</button>
                        </div>
                    </div>
                </div>

                <!-- Product Modal -->
                <div class="modal fade" id="productModal@product.Id" tabindex="-1" role="dialog" aria-labelledby="productModalLabel@product.Id" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="productModalLabel@product.Id">@product.ModelName</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <img src="@product.img_url" alt="@product.ModelName" />
                                <p>@product.Description</p>
                                <p class="price">@product.UnitCost.ToString("C")</p>
                                <button class="btn btn-primary">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

